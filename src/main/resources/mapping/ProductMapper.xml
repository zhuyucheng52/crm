<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.echo.crm.mapper.ProductMapper">
    <select id="findOtherByName" resultType="com.echo.crm.entry.Product">
      select *
      from tbl_product
      where name = #{name}
        and id != #{id}
    </select>
    <select id="findByName" resultType="com.echo.crm.entry.Product">
      select *
      from tbl_product
      where name = #{name}
    </select>
    <select id="selectByKeyword" resultType="com.echo.crm.entry.Product">
        select *
        from tbl_product
        <if test="key != null and key != ''">
            where id = #{key}
              or name like concat('%', #{key},'%')
        </if>
        order by id desc
    </select>
</mapper>
